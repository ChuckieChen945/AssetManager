{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "File System Directory Structure",
    "description": "Un esquema recursivo para representar un directorio y su contenido.",
    "type": "object",
    "properties": {
        "type": {
            "const": "directory"
        },
        "children": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "$ref": "#/$defs/node"
                }
            }
        }
    },
    "required": ["type", "children"],
    "$defs": {
        "node": {
            "oneOf": [
                {
                    "$ref": "#/$defs/file"
                },
                {
                    "$ref": "#/$defs/directory"
                }
            ]
        },
        "file": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "file"
                }
            },
            "required": ["type"],
            "additionalProperties": false
        },
        "directory": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "directory"
                },
                "children": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/$defs/node"
                        }
                    }
                }
            },
            "required": ["type", "children"]
        }
    }
}
